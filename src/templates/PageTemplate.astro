---
import type { PageContent } from '../utils/content-types';

interface Props {
  content: PageContent;
}

const { content } = Astro.props;
---

<article class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-4">{content.title}</h1>
  <p class="text-lg mb-8">{content.description}</p>
  <div class="prose max-w-none" set:html={content.content} />
</article>