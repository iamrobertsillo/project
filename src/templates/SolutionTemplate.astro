---
import type { SolutionContent } from '../utils/content-types';

interface Props {
  content: SolutionContent;
}

const { content } = Astro.props;
---

<article class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-4">{content.title}</h1>
  <p class="text-lg mb-8">{content.description}</p>
  
  <section class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Benefits</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {content.benefits.map(benefit => (
        <div class="bg-white p-4 rounded-lg shadow">
          <h3 class="font-bold mb-2">{benefit.title}</h3>
          <p>{benefit.description}</p>
        </div>
      ))}
    </div>
  </section>
</article>